section.intro
  .container
    .row.center-xs
      .col-xs-12
        h1 Снять комнату, квартиру или дом
        form.form.form--top
          select.select.select-last
            option Тип жилья
            option Тип жилья1
            option Тип жилья2
          select.select.select-last
            option Станция метро
            option Станция метро1
            option Станция метро2
          select.select.select-last
            option Количество комнат
            option Количество комнат1
            option Количество комнат2
          select.select.select-last
            option Бюджет
            option Бюджет1
            option Бюджет2
          select.select.select-last
            option Срок аренды
            option Срок аренды1
            option Срок аренды2
          input(type="submit" value="Найти")
    .intro__mobile
      .row
        .col-md-3.col-sm-4.col-xs-12
          .catalog__filter
            .catalog__filter__tabs
              ul.catalog__filter__tabs__caption
                li.active Список
                li Карта
              .catalog__filter__tabs__content.active
                form.form
                  .form__type.checkbox.checkbox--type
                    input(type="checkbox" id="apartments")
                    label(for="apartments") Квартиры
                    input(type="checkbox" id="room" checked)
                    label(for="room") Комнаты
                  .form__where
                    p Где?
                    .form__where__block
                      input(type="text" placeholder="По названию")
                      input(type="button" id="button")
                      label(for="button")
                        i.fa.fa-search
                  .form__cost
                    p Диапазон цены
                    .row
                      .col-xs-6
                        span от
                        input(type="number").from
                      .col-xs-6.end-xs
                        span до
                        input(type="number").to
                    .form__cost__range
                      input(type="range" id="cost")
                      .row
                        .col-xs-6
                          span 0
                        .col-xs-6.end-xs
                          span 95.000
                  .form__source.checkbox
                    p Источник
                    input(type="checkbox" id="source1" checked)
                    label(for="source1") Только проверенные
                    input(type="checkbox" id="source2")
                    label(for="source2") Собственник
                    input(type="checkbox" id="source3")
                    label(for="source3") Ищу соседа
                    input(type="checkbox" id="source4")
                    label(for="source4") Дов. управление
                    input(type="checkbox" id="source5")
                    label(for="source5") Вместо себя
                form.form
                  .form__extra.form__extra1
                    h4 Дополнительно
                      i.fa.fa-caret-down
                    .form__extra__block
                      .form__extra__block__area
                        p Площадь, м2
                        .row
                          .col-xs-6
                            span от
                            input(type="number")
                          .col-xs-6.end-xs
                            span до
                            input(type="number")
                      .form__extra__block__floor
                        p Этаж
                        .row
                          .col-xs-6
                            span от
                            input(type="number")
                          .col-xs-6.end-xs
                            span до
                            input(type="number")
                      .form__extra__block__comfort.checkbox
                        p Удобства
                        input(type="checkbox" id="comfort1" checked)
                        label(for="comfort1") Балкон
                        input(type="checkbox" id="comfort2")
                        label(for="comfort2") Холодильник
                        input(type="checkbox" id="comfort3")
                        label(for="comfort3") Телевизор
                        input(type="checkbox" id="comfort4")
                        label(for="comfort4") Кондиционер
                        input(type="checkbox" id="comfort5")
                        label(for="comfort5") Стиралка
                        input(type="checkbox" id="comfort5")
                        label(for="comfort5") Бойлер
                  .form__extra.form__extra2
                    h4 Дополнительно
                      i.fa.fa-caret-down
                    .form__extra__block
                      .form__extra__block__area
                        p Площадь, м2
                        .row
                          .col-xs-6
                            span от
                            input(type="number")
                          .col-xs-6.end-xs
                            span до
                            input(type="number")
                      .form__extra__block__floor
                        p Этаж
                        .row
                          .col-xs-6
                            span от
                            input(type="number")
                          .col-xs-6.end-xs
                            span до
                            input(type="number")
                      .form__extra__block__comfort.checkbox
                        p Удобства
                        input(type="checkbox" id="comfort1" checked)
                        label(for="comfort1") Балкон
                        input(type="checkbox" id="comfort2")
                        label(for="comfort2") Холодильник
                        input(type="checkbox" id="comfort3")
                        label(for="comfort3") Телевизор
                        input(type="checkbox" id="comfort4")
                        label(for="comfort4") Кондиционер
                        input(type="checkbox" id="comfort5")
                        label(for="comfort5") Стиралка
                        input(type="checkbox" id="comfort5")
                        label(for="comfort5") Бойлер
      a(href="#").btn.btn--intro Искать
  .intro__btn
    a(href="#description")
      i.fa.fa-angle-down